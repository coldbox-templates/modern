{
    "name":"ColdBox Modern CFML Application Template",
    "version":"8.2.0",
    "author":"You",
    "shortDescription":"A modern ColdBox CFML application template with best practices and tools integrated.",
    "location":"forgeboxStorage",
    "slug":"cbtemplate-modern",
    "createPackageDirectory":false,
    "type":"mvc",
    "keywords":[],
    "repository":{
        "type":"",
        "url":""
    },
    "ignore":[
        "changelog.md",
        ".github/ISSUE_TEMPLATE",
        ".github/workflows/*",
        ".github/CONTRIBUTING.md",
        ".github/FUNDING.YML",
        ".github/PULL_REQUEST_TEMPLATE.md"
    ],
    "dependencies":{
        "coldbox":"^8.0.0"
    },
    "devDependencies":{
        "testbox":"*",
        "route-visualizer":"*",
        "commandbox-boxlang":"*",
        "commandbox-cfformat":"*"
    },
    "installPaths":{
        "coldbox":"lib/coldbox/",
        "testbox":"lib/testbox/",
        "route-visualizer":"lib/modules/route-visualizer/"
    },
    "installPathConventions":{
        "modules":"lib/modules"
    },
    "scripts":{
        "postInstall":"pathExists .env || cp .env.example .env",
        "format":"cfformat run /app,/tests/specs,*.cfc,*.bx --overwrite",
        "format:check":"cfformat check /app,/tests/specs,*.cfc,*.bx ./.cfformat.json",
        "format:watch":"cfformat watch path='/app,/tests/specs,*.cfc,*.bx' settingsPath='.cfformat.json'",
        "build:docker":"!docker build --no-cache -t my-coldbox-app -f ./docker/Dockerfile ./",
        "run:docker":"!docker run -it -p 8080:8080 my-coldbox-app"
    },
    "testbox":{
        "runner":"/tests/runner.cfm"
    }
}
