{
    "cacheDefaultObject":"coldbox",
	"adminPassword":"coldbox",
    "caches":{
        "coldbox":{
            "class":"lucee.runtime.cache.ram.RamCache",
            "custom":{
                "timeToIdleSeconds":"1800",
                "timeToLiveSeconds":"3600"
            },
            "readOnly":"false",
            "storage":"true",
            "type":"RAM"
        }
    },
    "CFMappings":{
        "/app":{
            "PHYSICAL":"./app",
			"TOPLEVEL":"false"
        },
        "/coldbox":{
            "PHYSICAL":"./lib/coldbox",
            "TOPLEVEL":"false"
        },
		 "/coldbox/system/exceptions":{
            "PHYSICAL":"./lib/coldbox/system/exceptions",
            "TOPLEVEL":"true"
        },
		"/modules":{
            "PHYSICAL":"./modules"
        },
        "/public":{
            "PHYSICAL":"./public"
        },
		"/testbox":{
            "PHYSICAL":"./lib/testbox"
        },
		"/tests":{
            "PHYSICAL":"./tests"
        }
    },
    "datasources":{
        "coldbox":{
            "bundleName":"${DB_BUNDLENAME}",
            "bundleVersion":"${DB_BUNDLEVERSION}",
            "class":"${DB_CLASS}",
            "connectionLimit":"100",
            "connectionTimeout":"1",
            "custom":"useUnicode=true&characterEncoding=UTF8&serverTimezone=UTC&useLegacyDatetimeCode=true&autoReconnect=true&useSSL=false&allowPublicKeyRetrieval=true",
            "database":"${DB_DATABASE}",
            "dbdriver":"${DB_DRIVER:MySQL}",
            "dsn":"jdbc:mysql://{host}:{port}/{database}",
            "host":"${DB_HOST:127.0.0.1}",
            "password":"${DB_PASSWORD}",
            "port":"${DB_PORT:3306}",
            "storage":"false",
            "username":"${DB_USER:root}"
        }
    },
    "debuggingEnabled":true,
    "debuggingReportExecutionTimes":false,
    "disableInternalCFJavaComponents":false,
    "requestTimeout":"0,0,5,0",
    "requestTimeoutEnabled":true,
    "robustExceptionEnabled":true,
    "whitespaceManagement":"white-space-pref"
}